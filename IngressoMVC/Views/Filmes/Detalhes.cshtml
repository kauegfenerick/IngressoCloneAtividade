@model IngressoMVC.Models.ViewModels.ResponseDTO.GetFilmeDto

<div class="row">
    <div class="col-md-2">
        <img class="img-thumbnail" src="@Model.ImageUrl" />
    </div>
    <div class="col-md-10">
        <h1>@Model.Titutlo</h1>
        <img src="@Model.FotoURLProdutores">
        <p>@Model.Descricao</p>
    </div>

</div>

@if (@Model.FotoURLProdutores.Count > 0)
{
    <div class="row">
        <div id="carouselExampleControls" class="carousel slide col-md-4 offset-md-4" data-ride="carousel">
            <div class="carousel-inner">
                @foreach (var categoria in @Model.Categorias)
                 {
                    if (categoria == @Model.Categorias.First())
                    {
                        <div class="carousel-item active">
                            <p>@categoria</p>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <p>@categoria</p>
                        </div>
                     }
                 }
            </div>
            <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </button>
        </div>
    </div>
}
else
{
    <h1>Sem categorias cadastrados para @Model.Titutlo</h1>
    <a class="btn btn-success" asp-action="Atualizar">
        <i class="fa-solid fa-pen-to-square"></i>
        Editar
    </a>
}
@* Fim Carrossel*@
